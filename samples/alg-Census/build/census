#!/usr/bin/python3

import sys
from process import process

if len(sys.argv) < 5:
    print("usage: %s im0.pgm im1.pgm disp.pfm maxdisp [no_interp=0]" % argv[0])

file1 = sys.argv[1]
file2 = sys.argv[2]
outfile = sys.argv[3]
maxdisp = int(sys.argv[4])
no_interp = False
if len(sys.argv) > 5:
    no_interp = bool(int(sys.argv[5]))

process(file1, file2, outfile, maxdisp, no_interp)

